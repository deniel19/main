# the python code 

import gmpy2

# Given values
n = <very large modulus>

e = 10

c = <very large ciphertext>

# Try integer 10th root
m, exact = gmpy2.iroot(c, e)

if exact:
    print("[+] Exact root found!")
    print("Plaintext integer:", m)
    print("As bytes:", int(m).to_bytes((m.bit_length() + 7) // 8, 'big'))
else:
    print("[-] Attack failed.")
    print("The plaintext is too large (m^e >= n).")


